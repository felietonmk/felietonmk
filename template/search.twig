{% extends "page.twig" %}

{% block title %}{{ page.title ? page.title~" â€” " }}{% endblock %}

{% block content %}
    <article class="article">
        <h2 itemprop="headline">Wyszukiwarka</h2>
        <div class="hyphenate">
            <div id="tipue_search_content"></div>
        </div>
    </article>
{% endblock %}

{% block js %}
    <script src="{{ url.theme('/js/tipuesearch_set.js') }}"></script>
    <script src="{{ url.theme('/js/tipuesearch.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#tipue_search_input').tipuesearch({
                'mode': 'json',
                'descriptiveWords' : 50,
                'showTime' : false,
                'showURL' : false,
                'contentLocation': '{{ url.to("data/articles.json") }}'
            });
        });
    </script>
{% endblock %}